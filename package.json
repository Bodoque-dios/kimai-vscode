{
	"name": "kimai-vscode",
	"displayName": "Kimai VScode",
	"description": "Integrate Kimai time tracking into VS Code. Start and stop timers, view activities and projects, and track your work from the editor.",
	"version": "0.0.1",
	"license": "MIT",
	"engines": {
		"vscode": "^1.101.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"kimai",
		"time tracking",
		"productivity",
		"timer",
		"timesheets"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Bodoque-dios/kimai-vscode"
	},
	"publisher": "potx8o",
	"author": "Mat√≠as Olea",
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "kimai-vscode.openSettings",
				"title": "Kimai: Open Settings"
			},
			{
				"command": "kimai-vscode.setApiToken",
				"title": "Kimai: Set API Token"
			},
			{
				"command": "kimai-vscode.refreshTimers",
				"title": "Refresh Kimai Data",
				"icon": {
					"dark": "media/refresh.svg",
					"light": "media/refresh.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "kimai-vscode-sidebar",
					"title": "Kimai vscode",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"kimai-vscode-sidebar": [
				{
					"id": "kimaiTimerView",
					"type": "webview",
					"name": "Start Timer",
					"icon": "media/icon.svg"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "kimai-vscode.refreshTimers",
					"when": "view == kimaiTimerView",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Kimai vscode Tracker",
			"properties": {
				"kimai-vscode.url": {
					"type": "string",
					"default": "[https://your-kimai-url](https://your-kimai-url)",
					"description": "Base URL of your Kimai instance"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@types/vscode": "^1.101.0",
		"@typescript-eslint/eslint-plugin": "^8.31.1",
		"@typescript-eslint/parser": "^8.31.1",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.5.2",
		"eslint": "^9.25.1",
		"typescript": "^5.8.3"
	}
}
